extends template

block productos
    div(class="d-flex flex-row justify-content-center")
     div(class="container")
        h3(class="text-info text-center")="INGRESA EL PRODUCTO QUE DESEES AGREGAR"
        form(action="/productos" method="post")
            div(class="row")
                input(type="text" name="title" placeholder="Titulo" class="form-control m-2" required)

            div(class="row")
                input(type="number" name="price" placeholder="Precio" class="form-control m-2" required)

            div(class="row")
                input(type="text" name="thumbnail" placeholder="Url de la Imagen" class="form-control m-2" required)
            div(class="d-flex flex-row justify-content-center m-3")
                button(type="submit" class="btn btn-primary m-4")="Guardar"
    div(class="d-flex flex-row justify-content-center m-3")
        a(class="btn btn-primary" href="/productos")="Ir a productos"
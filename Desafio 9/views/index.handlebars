<h1 class="text-center text-danger" id="nombre">PRODUCTOS</h1>

{{#unless productos}}
    <div class="alert alert-warning" role="alert">
        No se encontraron productos
    </div>
    <form action="/" class="d-flex justify-content-center mt-3">
        <input type="submit" value="Volver" class="btn btn-primary">
    </form>
{{/unless}}

{{#if productos}}
<div class="d-flex flex-row justify-content-center">
    <div class="container">
<table class="table">
    <thead>
  <tr>
    <tbody>
    <th scope="col">Titulo</th>
    <th scope="col">Precio</th>
    <th scope="col">Foto</th>
    </thead>
  </tr>
  {{#each productos}}
  {{#each this}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td><img src="{{this.thumbnail}}" width="50" height="50"/></td>
    </tr>
  {{/each}}
  {{/each}}
  </tbody>
</table>
    </div>
</div>
{{/if}}